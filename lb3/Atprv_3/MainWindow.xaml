<Window x:Class="lb3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lb3"
        mc:Ignorable="d"
        Title="Лабораторная работа №3" Height="450" Width="800">
    <Grid x:Name="main_grid" Margin="10,20,10,7">
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="task1" Width="*" MinWidth="160"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition x:Name="task2" Width="*" MinWidth="160"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition x:Name="task3" Width="*" MinWidth="160"/>
        </Grid.ColumnDefinitions>

        <Border BorderBrush="Black" BorderThickness="1" Grid.Column="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="1.2*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock TextWrapping="Wrap" Text="Map and Reduce (Task 1)" Margin="10,10,10,5" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Grid.Row="0"/>

                <StackPanel Grid.Row="1" Margin="10">
                    <Button Content="Загрузить файлы" x:Name="LoadFilesButton" HorizontalAlignment="Stretch" Padding="5"/>
                    <TextBlock Text="Выбранные файлы:" Margin="0,5,0,0"/>
                </StackPanel>

                <ListBox x:Name="FilesListBox" HorizontalAlignment="Stretch" Margin="10,0,10,5" Grid.Row="2" d:ItemsSource="{d:SampleData ItemCount=3}"/>

                <TextBlock TextWrapping="Wrap" Text="Словарь/Результат:" Margin="10,5,10,5" Grid.Row="3" FontWeight="SemiBold"/>

                <ListBox x:Name="ResultDictionaryListBox" HorizontalAlignment="Stretch" Margin="10,0,10,5" Grid.Row="4" d:ItemsSource="{d:SampleData ItemCount=5}"/>

                <TextBlock x:Name="StatusTextBlock1" Text="Статус: Ожидание" Margin="10" Grid.Row="5" FontSize="14" HorizontalAlignment="Center"/>
            </Grid>
        </Border>

        <GridSplitter Grid.Column="1" HorizontalAlignment="Left" Height="407" VerticalAlignment="Stretch" Width="5"/>

        <Border BorderBrush="Black" BorderThickness="1" Grid.Column="2" Margin="0,0,1,0">
            <Grid x:Name="Task2Grid">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="1.2*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock TextWrapping="Wrap" Text="Микросервисы (Task 2)" Margin="10,10,10,5" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Grid.Row="0"/>

                <Button Content="Запустить обработку заказов" x:Name="StartProcessingButton" Click="StartProcessingButton_Click" 
                        Margin="10" Grid.Row="1" Padding="5" />

                <Button Content="Открыть Журнал (task2log.txt)" x:Name="OpenLogButton" 
                        Click="OpenLogButton_Click" Margin="10,0,10,5" Grid.Row="2" 
                        Padding="5" IsEnabled="True"/>

                <TextBlock TextWrapping="Wrap" Text="Статистика обработки:" Margin="10,5,10,5" Grid.Row="3" FontWeight="SemiBold"/>

                <ListBox x:Name="StatisticsListBox" HorizontalAlignment="Stretch" Margin="10,0,10,5" Grid.Row="4"/>

                <TextBlock x:Name="StatusTextBlock2" Text="Статус: Ожидание запуска" Margin="10" Grid.Row="5" FontSize="14" HorizontalAlignment="Center"/>
            </Grid>
        </Border>

        <GridSplitter Grid.Column="3" HorizontalAlignment="Left" Height="407" VerticalAlignment="Center" Width="5"/>

        <Border BorderBrush="Black" BorderThickness="1" Grid.Column="4" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Grid x:Name="Task3Grid">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock TextWrapping="Wrap" Text="LINQ vs PLINQ (Task 3)" Margin="10,10,10,5" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Grid.Row="0"/>

                <StackPanel Orientation="Vertical" Margin="10,5" Grid.Row="1">
                    <StackPanel Orientation="Horizontal" Margin="0,2,0,2">
                        <TextBlock Text="Кол-во сотрудников:" Width="120" VerticalAlignment="Center"/>
                        <TextBox x:Name="EmployeeCountTextBox" Text="50000" Width="80"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,2,0,2">
                        <TextBlock Text="Id сотрудников > (Q1):" Width="120" VerticalAlignment="Center"/>
                        <TextBox x:Name="IdThresholdTextBox" Text="40000" Width="80"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,2,0,2">
                        <TextBlock Text="Сумма заказа > (Q2):" Width="120" VerticalAlignment="Center"/>
                        <TextBox x:Name="AmountThresholdTextBox" Text="4500" Width="80"/>
                    </StackPanel>
                </StackPanel>

                <Button Content="Сгенерировать и Сравнить" x:Name="StartComparisonButton" Click="StartComparisonButton_Click" 
                        Margin="10" Grid.Row="2" Padding="5" />

                <TextBlock TextWrapping="Wrap" Text="Результаты сравнения и время:" Margin="10,5" Grid.Row="3" FontWeight="SemiBold"/>

                <ListBox x:Name="ResultsListBox3" HorizontalAlignment="Stretch" Margin="10,0,10,5" Grid.Row="4"/>

                <TextBlock x:Name="StatusTextBlock3" Text="Статус: Ожидание параметров" Margin="10" Grid.Row="5" FontSize="14" HorizontalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</Window>